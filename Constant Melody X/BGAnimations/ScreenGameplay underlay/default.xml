	<ActorFrame 
		Command="%function(self) 
			loadMusic = 1 
			GameplayInit(self)
		end" 
		FirstUpdateCommand="%function(self)
			Gameplay(self)
			self:stopeffect()
			self:SetUpdateFunction(GameplayUpdate)
			if FUCK_EXE then
				stitch('lua.death').Start()
			end
		end" 
	/>
	<Layer Type="ActorFrame"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_TOP+20;zoomx,((SCREEN_WIDTH/SCREEN_HEIGHT)/(4/3))"
		> <children>

		<Layer 
			Type="SongMeterDisplay" 
			StreamWidth="300" 
			StreamPath="meter stream" 
			InitCommand="%function(self) 
					if Color() == 8 then self:diffuse(ColorRGB(0)) 
				elseif Color() == 9 then self:diffuse(ColorRGB(-1)) 
				elseif Color() == 10 then self:diffuse(ColorRGB(3)) 
				elseif Color() == 11 then self:diffuse(ColorRGB(2)) 
				else self:diffuse(ColorRGB(1)) 
				end
				if CONSTMELODY.MinimumVersion('V2') then self:hidden(1) end
			end" 
		>
			<Tip File="tip" OnCommand="hidden,1" />
		</Layer>

		<Layer
			Condition="CONSTMELODY.MinimumVersion('V2') "
			Type="Quad" InitCommand="zoomx,305;zoomy,20" 
			OnCommand="%function(self)
				local r,g,b,a = ColorRGB(5,true)
				self:diffuse(r*0.6,g*0.6,b*0.6,a)
			end"
		/>

		<Layer
			Condition="CONSTMELODY.MinimumVersion('V2')"
			Type="Quad" InitCommand="zoomx,300;zoomy,16" 
			OnCommand="%function(self)
				local r,g,b,a = ColorRGB(5,true)
				self:diffuse(r,g,b,a)
				self:queuecommand('Update')
			end"
			UpdateCommand="%function(self)
				-- todo: fix this
				-- i think its getcurrentsong:musiclengthseconds not being accurate
				-- probably multiply by something and see if it works
				self:cropright(1 - (GAMESTATE:GetSongTimeVisible() / GAMESTATE:GetCurrentSong():MusicLengthSeconds()) )
				self:sleep(0.01)
				self:queuecommand('Update')
			end"
		/>

		<Layer File="meter frame" Condition="not CONSTMELODY.MinimumVersion('V2')"/>

		<Layer
			Type="BitmapText"
			Font="_misobold white"
			OnCommand="y,-5;zoom,0.35;shadowlength,0;maxwidth,840;zoomx,0.35/((SCREEN_WIDTH/SCREEN_HEIGHT)/(4/3))"
			InitCommand="animate,0;playcommand,Update"
			CurrentSongChangedMessageCommand="playcommand,Update"
			UpdateCommand="%SetFromSongTitleAndCourseTitle"
		/>

		<Layer 
			Condition="CONSTMELODY.MinimumVersion('V2')"
			File="pinkie.sprite"
			OnCommand="%function(self)
				self:zoom(0.5)
				self:basezoomx(1/((SCREEN_WIDTH/SCREEN_HEIGHT)/(4/3)))
				--
				self:queuecommand('Update')
			end"
			UpdateCommand="%function(self)
				local d = (GAMESTATE:GetSongTimeVisible() / GAMESTATE:GetCurrentSong():MusicLengthSeconds()) 
				d = (d * 2) - 1
				self:x( (300/2) * d )
				self:sleep(0.01)
				self:queuecommand('Update')
			end"
		/>
	</children> </Layer>

	<!-- Difficulty: -->
